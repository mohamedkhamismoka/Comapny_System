@model DeptVM
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    @section style{
        <style>
            h1 {
                text-align: center;
                margin-top: 30px;
                color: red;
            }

            form {
                width: 500px;
                position: absolute;
                left: 50%;
                transform: translate(-50%,0)
            }
        </style>
    }
</head>
<body>
    <center>
        <h1 style="margin-top:20px;">@SharedLocalizer["update Department"]</h1>
    </center>
    <form class="forma" asp-area="Departments" asp-controller="Department" asp-action="update">

        <div class="form-group">
            <label for="Name">@SharedLocalizer["Name"]:</label>
            <input type="text" class="form-control" placeholder=@SharedLocalizer["Enter Name"] id="Name" asp-for="name">
            <span class="text-danger font-weight-bold" asp-validation-for="name"></span>
        </div>
        <center>
            <button class="btn btn-success " asp-controller="Department" asp-action="Index">@SharedLocalizer["Back To Data"]</button>

            <button type="submit" class="btn btn-primary " value="Update"> @SharedLocalizer["Update"]</button>
            <button class="btn btn-danger " asp-area="Department" asp-controller="Department" asp-action="Delete" asp-route-id="@Model.id">@SharedLocalizer["Delete"]</button>
        </center>

    </form>

    @section script{
        <script src="~/plugins/jquery/jquery.js"></script>
        <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
        <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    }
</body>
</html>
