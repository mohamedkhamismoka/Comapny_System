


@model IEnumerable<WebApplication5.BL.VM.EmpVM>


@{
    Layout = "~/Views/Layout/MainLayout.cshtml";
    ViewBag.title = "Employee Card";
}


<html>


<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/Tables.css" rel="stylesheet" />
    @section styling{

        <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.css" />
        <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.css" />
        <link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.css" />

        <link rel="stylesheet" href="~/bootstrap-select/css/bootstrap-select.css" />
        <link href="~/css/upgrading.css" rel="stylesheet" />

        <style>
            .dataTables_length {
                margin-right: 217px;
            }
        </style>


    }

</head>
<body>
<div>
    <center>
        <div class="container-fluid" style="position:absolute;width:800px;left:50%;transform:translate(-50%,0)">
            <div class="row clearfix">
                <center>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="width:800px;" >
                        <div class="card">
                            <div class="header">
                                <center>
                                    <h1 style="text-align:center;color:red;margin-top:50px;margin-bottom:10px">@SharedLocalizer["Employee Card"]</h1>
                                    <a class="btn btn-primary" asp-area="Employee" asp-controller="Employee" asp-action="create" style="margin-bottom:5px;margin-top:2px"><i class="fa fa-plus" style="margin:4px"></i>@SharedLocalizer["Create new Employee"]</a>
                                    @*<form class="formas" asp-area="Employee" asp-controller="Employee" asp-action="Index" method="get" style="width:180px;display:inline-block;margin-top:4px;">
                                            <div class="input-group mb-3">
                                                <input type="text" class="form-control" placeholder="search" name="search" id="se">

                                                <div class="input-group-append">
                                                    <button type="submit" class="btn btn-dark"><i class="fa fa-search"></i></button>
                                                </div>
                                                <input type="hidden" name="state" value="@ViewBag.x" id="hid" />
                                            </div>


                                        </form>*@
                                    <form>
                                        <label for="state">@SharedLocalizer["Card Option"]</label>
                                        <select id="Status" style="margin-bottom:3px">
                                            <option value="all"> @SharedLocalizer["All"]</option>
                                            <option value="active">@SharedLocalizer["Active Only"]</option>
                                        </select>

                                    </form>

                                </center>
                            </div>
                            <div class="body">
                                <div class="table-responsive">

                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                                        <thead>

                                            <tr>

                                                <th>@SharedLocalizer["Name"]</th>
                                                <th>@SharedLocalizer["Salary"]</th>
                                                <th>@SharedLocalizer["department"]</th>
                                                <th>@SharedLocalizer["Photo"]</th>

                                                <th>@SharedLocalizer["Details"]</th>
                                                <th>@SharedLocalizer["Update"]</th>
                                                <th>@SharedLocalizer["Delete"]</th>

                                                <th><i class="fas fa-plus"></i></th>

                                            </tr>
                                        </thead>
                                        <tbody class="m">
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                               
                                                <td style="font-size:17px">@item.name</td>
                                                <td>@item.salary</td>
                                                <td>@item.Department.name</td>
                                                <td><img src="~/files/images/@item.imgname" width="50" height="50" asp-append-version="true"></td>
                                                <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@item.id">@SharedLocalizer["Details"]</a></td>
                                                <td><a class="btn btn-success" asp-action="update" asp-route-id="@item.id">@SharedLocalizer["Update"]</a></td>
                                                <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id"> @SharedLocalizer["Delete"]</a></td>
                                                <td><a class="btn btn-warning" style="color:black" href="/Works/Works/Create/?Employee_id=@item.id"><i class="fas fa-plus" data-toggle="tooltip" title="@SharedLocalizer["Add To Project"]"></i></a></td>

                                            </tr>
                                            }





                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </center>
            </div>
        </div>

    </center>

</div>

@section scripting{
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/jszip/jszip.min.js"></script>
    <script src="~/plugins/pdfmake/pdfmake.min.js"></script>

    <script>
        $(function () {
            $(".js-basic-example").DataTable({
                "responsive": true, "lengthChange": true, "autoWidth": false, "pageLength": 5, "lengthMenu": [[3, 5, 10, 25, 50, -1], [3, 5, 10, 25, 50, "All"]],
                "buttons": ["excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('.table-responsive .col-md-6:eq(0)');
            $('.js-basic-example').DataTable({
                "destroy": true,
                "retrieve": true,
                "paging": true,
                "lengthChange": true,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "pageLength": 5,
                "bLengthChange": false,
                "bInfo": false,
                "bSort": true,
                "bFilter": true,
                "lengthMenu": [[3, 5, 10, 25, 50, -1], [3, 5, 10, 25, 50, "All"]],

            });



        });
    </script>
    <script src="~/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <script src="~/bootstrap-select/js/bootstrap-select.js"></script>
}
    @section script{
        <script src="~/plugins/jquery/jquery.js"></script>
        <script src="~/plugins/bootstrap/js/bootstrap.js"></script>
        <script>
            $(document).ready(function () {
                $('[data-toggle="tooltip"]').tooltip();
            });
        </script>



        <script>

            $(document).ready(function () {
                $("#Status").val($("#hid").val()).change()

                $("#Status").change(function () {

                    $("#hid").val($("#Status option:selected").val());
                    $(".m").empty();

                    var status = $("#Status option:selected").val();

                    $.ajax({
                        type: "POST",
                        url: '/Employee/Employee/GetData',
                        data: { state: status },

                        success: function (res) {
                            $.each(res, function (i, e) {
                                if (e != null) {

                                    $(".m").append("<tr> <td>" + e.name + "</td> <td>" + e.salary + "</td> <td>" + e.Department.name + "</td> <td><img class='img' src='/files/images/" + e.imgname + "' asp-append-version=" + true + " width='50' height='50'></td>  <td><a class='btn btn-primary' href='/Employee/Employee/Details?id=" + e.id + "' >@SharedLocalizer["Details"]</a></td>  <td><a class='btn btn-success' href='/Employee/Employee/update?id=" + e.id + "' >@SharedLocalizer["Update"]</a></td>   <td><button class='btn btn-danger' href='/Employee/Employee/Delete?id=" + e.id + "'>@SharedLocalizer["Delete"]</a></td>   <td><a class='btn btn-warning' style='color: black' href='/Works/Works/Create/?Employee_id=" + e.id +"'><i class='fas fa-plus' data-toggle='tooltip' title='Add To Project'></i></a></td>   </tr>");
                                }
                                else {
                                    (".m").append("<tr> No Data Found!</tr>");
                                }

                            });
                        }






                    });

                    });

            });









        </script>
    }
    </body>
    </html>
