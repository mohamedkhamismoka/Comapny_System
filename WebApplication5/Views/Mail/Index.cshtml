@model WebApplication5.BL.VM.MailVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}
@section style{
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <style>
        h3 {
            text-align: center;
            margin-top: 30px;
            color: red;
        }

        form {
            width: 500px;
            position: absolute;
            left: 50%;
            transform: translate(-50%,0);
            
        }
        .y {
            position: relative;
            margin-left: 10px;
            width: 310px
        }
    
    </style>
}

<center>
    <h3>@TempData["x"]</h3>
</center>
<form asp-controller="Mail" asp-action="send">
    <div class="form-group">
        <label asp-for="mail">@SharedLocalizer["Email address"]</label>
        <input type="email" class="form-control" asp-for="mail">
        <span asp-validation-for="mail" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
        <label asp-for="password">@SharedLocalizer["Password"]</label>
        <input type="password" class="form-control" asp-for="password">
        <span asp-validation-for="password" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
        <label asp-for="title">@SharedLocalizer["Title"]</label>
        <input type="text" class="form-control" asp-for="title">
        <span asp-validation-for="title" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
        <label asp-for="body">@SharedLocalizer["Message"]</label>
        <textarea cols="70" rows="5" asp-for="body" class="form-control"></textarea>
        <span asp-validation-for="body" class="text-danger font-weight-bold"></span>
    </div>

    <center>
        <button type="submit" class="btn btn-primary">@SharedLocalizer["Send"] <i class="fab fa-telegram-plane"></i></button>
    </center>
</form>

@section script{
    <script src="~/plugins/jquery/jquery.js"></script>
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

